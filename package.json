{
  "name": "sulit-wifi-portal",
  "version": "1.0.0",
  "description": "A captive portal for SULIT WIFI on Orange Pi",
  "main": "server.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:js": "esbuild ./src/index.tsx --bundle --outfile=dist/bundle.js --jsx=automatic --minify",
    "build": "npm run build:css && npm run build:js",
    "start": "npm run build && node server.js",
    "dev": "node server.js"
  },
  "keywords": [
    "wifi",
    "portal",
    "orange-pi"
  ],
  "author": "AJC",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "onoff": "^6.0.3",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "tailwindcss": "^3.4.4"
  }
}
