{
  "name": "sulit-wifi-portal",
  "version": "1.0.0",
  "description": "Backend server for the SULIT WIFI hotspot portal on Orange Pi.",
  "main": "server.js",
  "scripts": {
    "build:css": "tailwindcss -i ./styles.css -o ./dist/styles.css",
    "build:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --format=esm --jsx=automatic",
    "build": "npm run build:css && npm run build:js",
    "start": "npm run build && node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "captive-portal",
    "hotspot",
    "orange-pi",
    "gpio",
    "nodogsplash"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.28.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.4",
    "express": "^4.19.2",
    "http-proxy-middleware": "^3.0.0",
    "onoff": "^6.0.3",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.3"
  }
}
